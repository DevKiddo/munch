<h3>Manage Ingredients</h3>
<form >
    <p>Name:</p>  
    <input id="ingredientName" type="text" name="ingredientName" />
    <br>
    <p>Price:</p>  
    <input id="ingredientPrice" type="text" name="ingredientPrice" />
    <br>
    <br>
    <button id="addNewIngredient" type="button">Add</button>
    <button id="editIngredient" type="button">Edit</button>
    <button id="disableIngredient" type="button">Toggle Stock</button>
</form>

<h3>Ingredients</h3>

<ol id="result">
    {{> ingredient_list }}
</ol>


